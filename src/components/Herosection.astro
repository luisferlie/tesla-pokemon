---
import Logo from "../components/Logo.astro";
---

<section class="pt-7 bg-black h-screen w-screen relative z-30">
  <header
    class="absolute top-1/3 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center z-100"
  >
    <h1 class="text-[40px] text-white text-5xl font-medium z-100">
      Disfrute de Tesla
    </h1>
    <p class="text-[16px] text-white z-100">Programe una prueba hoy mismo</p>
  </header>

  <footer
    class="uppercase text-white absolute top-[60%] w-full left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center z-100"
  >
    <a
      href=""
      class="border-[3px] border-white bg-white/5 backdrop-blur-sm text-sm rounded font-medium px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors"
    >
      Prueba de conduccion
    </a>
    <div class="absolute top-0 bottom-0 h-30 -z-50">
      <video src="/video.webm" autoplay muted loop class="object-cover"></video>
    </div>
  </footer>
</section>
<header
  class="text-white z-200 w-screen flex grow-0 basis-0 justify-between px-5 fixed bottom-0"
>
  <section id="nav" class="z-200 text-white">
    <div class="p-2 mx-12 flex-grow">
      <Logo />
    </div>
    <nav class="flex grow-1 justify-center items-center w-full">
      <ul class="w-full flex justify-center space-x-4 font-medium">
        <li><a href=""></a>ModelS</li>
        <li><a href="">Model3</a></li>
        <li><a href="">ModelX</a></li>
        <li><a href="">ModelY</a></li>
        <li><a href=""></a>PowerWall</li>
        <li><a href=""></a>Carga</li>
      </ul>
    </nav>
    <nav class="flex grow-0 basis-0 justify-center items-center w-full">
      <ul class="w-full flex justify-center space-x-4">
        <li><a href=""></a>Soporte</li>
        <li><a href="">Tienda</a></li>
        <li><a href="">Cuenta</a></li>
        <li><a href="">Menu</a></li>
      </ul>
    </nav>
  </section>
</header>
