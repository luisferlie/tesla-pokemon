---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}
const { name, url, isBig } = Astro.props;

const id = url.split("/").at(-2);
console.log(id);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<!-- <a href=`/pokemon/${name}` transition:name=`pokemon-${name}`> -->
<a href=`/pokemon/${name}` transition:name=`pokemon-${name}`>
  <p
    class:list={[
      "px-10 capitalize w-full text-2xl pb-8 text-center",
      isBig && "text-8xl",
    ]}
  >
    #{`${id}`} ${name}
  </p>
  <span class="btn">vota</span>
  <img
    class:list={[
      `flex flex-col justify-center items-center  bg-amber-950 rounded-4xl`,
      !isBig && "border-none ",
      isBig && "border-4 border-white w-5/6 mx-auto w-120 h-120",
    ]}
    src={imageSrc}
    alt={name}
  />
</a>
